---
// Assets
import Cross from "@/components/assets/Cross.astro";
import StripesBG from "@/components/assets/StripesBG.astro";
import AlpineTailwind from "@/components/global/AlpineTailwind.astro";
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import ComponentsShowcase from "@/components/landing/ComponentsShowcase.astro";
---

<BaseLayout>
  <section class="relative">
    <Wrapper variant="standard" class="pt-32 lg:pt-12 pb-12 relative">
      <!-- Top Right Plus 
      <Cross class="-top-[0.6rem] -right-[0.65rem] z-51" />
       -->
      <!-- Top left Plus 
      <Cross class="-top-[0.6rem] -left-[0.65rem] z-51" />
       -->
      <StripesBG
        variant="light"
        direction="horizontal"
        class="absolute hidden md:block inset-0 w-[25%] -mx-px h-[60%] top-0 ml-auto"
      />
      
      <StripesBG
        variant="secondary"
        direction="horizontal"
        class="absolute hidden md:block w-[25%] -mx-px h-[15%] top-[60%] right-0"
      />
      <StripesBG
        variant="base"
        direction="horizontal"
        class="absolute hidden md:block w-[25%] -mx-px top-[75.5%] -bottom-0 right-0"
      />

      <div class="text-balance max-w-xl relative">
        <AlpineTailwind />
        <Text
          tag="h1"
          variant="displayMD"
          class="font-semibold tracking-tight text-base-900 dark:text-beige mt-12 font-display"
        >
          Oxbow UI is Open Source.
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-base-500 dark:text-base-400"
        >
          427 Tailwind CSS & Alpine JS blocks â€” MIT-licensed and
          production-ready. Copy paste, fork it, remix it, ship it,enjoy it,
          share it.
        </Text>
      </div>
    </Wrapper>
  </section>
  <ComponentsShowcase />
</BaseLayout>
